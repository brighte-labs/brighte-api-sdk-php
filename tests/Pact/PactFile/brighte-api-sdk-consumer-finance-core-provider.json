{
  "consumer": {
    "name": "brighte-api-sdk-consumer"
  },
  "provider": {
    "name": "finance-core-provider"
  },
  "interactions": [
    {
      "description": "A request to get financial product configuration",
      "request": {
        "method": "POST",
        "path": "/v2/finance/graphql",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "data": {
            "financialProductConfiguration": {
              "version": 1,
              "establishmentFee": 4.98,
              "interestRate": 5.98,
              "applicationFee": 6.98,
              "annualFee": 7.98,
              "weeklyAccountFee": 8.98,
              "latePaymentFee": 9.98,
              "introducerFee": 10.98,
              "enableExpressSettlement": true,
              "minFinanceAmount": 11.98,
              "maxFinanceAmount": 12.98,
              "minRepaymentMonth": 13,
              "maxRepaymentMonth": 30,
              "forceCcaProcess": true,
              "paymentCycle": null,
              "invoiceRequired": true,
              "manualSettlementRequired": true,
              "defaultPaymentCycle": "weekly"
            }
          }
        },
        "matchingRules": {
          "$.body.data.financialProductConfiguration": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "A request to get financial product",
      "request": {
        "method": "POST",
        "path": "/v2/finance/graphql",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "data": {
            "financialProduct": {
              "slug": "GreenLoan",
              "name": "test-name",
              "type": "Loan",
              "customerType": "Residential",
              "loanTypeId": 1,
              "configuration": {
                "version": 1,
                "establishmentFee": 4.98,
                "interestRate": 5.98,
                "applicationFee": 6.98,
                "annualFee": 7.98,
                "weeklyAccountFee": 8.98,
                "latePaymentFee": 9.98,
                "introducerFee": 10.98,
                "enableExpressSettlement": true,
                "minFinanceAmount": 11.98,
                "maxFinanceAmount": 12.98,
                "minRepaymentMonth": 13,
                "maxRepaymentMonth": 30,
                "forceCcaProcess": true,
                "paymentCycle": null,
                "invoiceRequired": true,
                "manualSettlementRequired": true,
                "defaultPaymentCycle": "weekly"
              },
              "categoryGroup": "Green",
              "fpAccountType": "test-account-type",
              "fpBranch": "test-branch"
            }
          }
        },
        "matchingRules": {
          "$.body.data.financialProduct": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}